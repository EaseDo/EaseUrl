{
    "compilerOptions": {
      "experimentalDecorators": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es5",
      "downlevelIteration": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "plugins": [
        {
          "name": "typescript-lit-html-plugin"
        }
      ],
      "lib": [
        "es2015.promise",
        "es2015",
        "dom"
      ]
    },
    "exclude": [
      ".history",
      "node_modules"
    ],
    "include": [
      "src/**/*.ts",
    ]
  }